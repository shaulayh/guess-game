<thlogic>
    <attr sel="#headId"
          th:replace="~{fragments/head::headFragment}"
    />

    <attr sel="#titleId"
          th:text="#{game.title}"
    />
    <attr sel="#main-message"
          th:text="${mainMessage}"
    />
    <attr sel="#result-message"
          th:text="${resultMessage}"
    />

    <attr sel="#enter-guess"
          th:text="#{enter.guess}"
    />
    <attr sel="#submit-guess"
          th:value="#{submit.guess}"
    />
    <attr sel="#footer"
          th:replace
                  ="~{fragments/footer::footerFragment}"
    />
</thlogic>